@model IEnumerable<Hotel>
@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}
<div class="container">
   
    @foreach (var item in Model as List<Hotel>)
    {
         <div class="row mt-5">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="~/images/" />
                        </div>
                        <div class="col-sm-9">
                            <h1 class="alert alert-success">@item.Name</h1>
                            <hr />
                                <p>  <small>@item.City</small> - <small>@item.Address</small>  -  <small>@item.Email</small> </p>
                        </div>
                    </div>
                        <div class="row m-3">
                            <div class="col text-center">
                                <button class="btn btn-success" >الحجز </button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>

    }
   

</div>