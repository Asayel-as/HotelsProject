@model Hotel
@{
}
<div class="container" dir="rtl">
    <div class="alert alert-success">تعديل بيانات الفندق</div>
    <form asp-controller="Dashboard" asp-action="UpdateRecord" method="post">
        <input type="hidden" asp-for="@Model.Id"/> 
        <div class="row">
            <div class="col">
                <label for="Name" class="p-2">اسم الفندق</label>
                <input type="text" id="Name" name="Name" class="form-control form-control-sm" asp-for="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label for="Address" class="p-2"> عنوان الفندق </label>
                <input type="text" id="Address" name="Address" class="form-control form-control-sm" asp-for="@Model.Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label for="City" class="p-2">  المدينة</label>
                <input type="text" id="City" name="City" class="form-control form-control-sm" asp-for="@Model.City"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label for="Email" class="p-2">البريد الإليكتروني </label>
                <input type="text" id="Email" name="Email" class="form-control form-control-sm" asp-for="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label for="Phone" class="p-2"> رقم الهاتف </label>
                <input type="text" id="Phone" name="Phone" class="form-control form-control-sm" asp-for="@Model.Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="Image" class="p-2"> الصورة </label>
                <input type="text" id="Image" name="Image" class="form-control form-control-sm" asp-for="@Model.Image"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                <button class="btn btn-success" type="submit">حفظ</button>
            </div>
        </div>
    </form>
</div>
